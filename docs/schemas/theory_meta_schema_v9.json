{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Theory Meta-Schema v9.0",
  "description": "Computable framework for representing social science theories with DOLCE alignment",
  "version": "9.0",
  "type": "object",
  "required": ["theory_id", "theory_name", "version", "classification", "ontology", "process", "telos"],
  "properties": {
    "theory_id": {
      "type": "string",
      "pattern": "^[a-z_][a-z0-9_]*$",
      "description": "Unique identifier for the theory"
    },
    "theory_name": {
      "type": "string",
      "description": "Human-readable name of the theory"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?$",
      "description": "Semantic version of this theory schema"
    },
    "authors": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Key theorists and contributors"
    },
    "publication_year": {
      "type": "integer",
      "minimum": 1900,
      "maximum": 2030,
      "description": "Year of seminal publication"
    },
    "description": {
      "type": "string",
      "description": "Concise summary of the theory"
    },
    "classification": {
      "type": "object",
      "required": ["domain"],
      "properties": {
        "domain": {
          "type": "object",
          "required": ["level", "component", "metatheory"],
          "properties": {
            "level": {
              "type": "string",
              "enum": ["Micro", "Meso", "Macro"],
              "description": "Level of analysis"
            },
            "component": {
              "type": "string", 
              "enum": ["Who", "Whom", "What", "Channel", "Effect"],
              "description": "Component of influence"
            },
            "metatheory": {
              "type": "string",
              "enum": ["Agentic", "Structural", "Interdependent"],
              "description": "Causal metatheory"
            }
          }
        }
      }
    },
    "ontology": {
      "type": "object",
      "required": ["entities", "relationships"],
      "properties": {
        "entities": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "dolce_parent", "mcl_id"],
            "properties": {
              "name": {"type": "string"},
              "dolce_parent": {
                "type": "string",
                "format": "uri",
                "description": "IRI of closest DOLCE class"
              },
              "mcl_id": {
                "type": "string",
                "description": "Master Concept Library primary key"
              },
              "properties": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["name", "type"],
                  "properties": {
                    "name": {"type": "string"},
                    "type": {"type": "string"},
                    "constraints": {"type": "object"}
                  }
                }
              }
            }
          }
        },
        "relationships": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "source_role", "target_role", "dolce_parent"],
            "properties": {
              "name": {"type": "string"},
              "source_role": {"type": "string"},
              "target_role": {"type": "string"},
              "dolce_parent": {
                "type": "string",
                "format": "uri",
                "description": "IRI of closest DOLCE relation"
              },
              "properties": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": ["name", "type"],
                  "properties": {
                    "name": {"type": "string"},
                    "type": {"type": "string"},
                    "constraints": {"type": "object"}
                  }
                }
              }
            }
          }
        }
      }
    },
    "process": {
      "type": "object",
      "required": ["type", "steps"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["sequential", "iterative", "workflow"],
          "description": "Process flow type"
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["step_id", "description"],
            "properties": {
              "step_id": {"type": "string"},
              "description": {"type": "string"},
              "inputs": {"type": "array", "items": {"type": "string"}},
              "outputs": {"type": "array", "items": {"type": "string"}},
              "conditions": {"type": "object"}
            }
          }
        }
      }
    },
    "telos": {
      "type": "object",
      "required": ["purpose", "output_format", "success_criteria"],
      "properties": {
        "purpose": {"type": "string"},
        "output_format": {"type": "string"},
        "success_criteria": {
          "type": "array",
          "items": {"type": "string"}
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "mcl_id": {
          "type": "string",
          "description": "Master Concept Library primary key"
        },
        "created": {"type": "string", "format": "date-time"},
        "modified": {"type": "string", "format": "date-time"},
        "contributors": {"type": "array", "items": {"type": "string"}}
      }
    }
  }
} 